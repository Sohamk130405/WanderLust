<% layout('/layouts/boilerplate') -%>
<div class="row mt-3 offset-lg-3">
    <div class="col-lg-6 text-center">
        <h2><b>SignUp On WanderLust</b></h2>
    </div>
    <div class="row mt-3">
        <form action="/user/signup" method="post" class="needs-validation col-lg-6" novalidate>     
            <div class="mb-3 mt-2">
              <label for="username" class="form-label">Username:</label>
              <input type="text" name="username" class="form-control" required/>
              <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3 mt-2">
                <label for="email" class="form-label">Email:</label>
                <input type="email" name="email" class="form-control" required/>
                <div class="invalid-feedback">Email is required!</div>
            </div>
            <div class="mb-3 mt-2">
                <label for="password" class="form-label">Password:</label>
                <input type="password" name="password" class="form-control" required/>
                <div class="invalid-feedback">Enter Password</div>
            </div>
            <button type="submit" class="btn btn-dark add-btn btn-lg  mt-3">SignUp</button>
        </form>
    </div>
</div>