<% layout('/layouts/boilerplate') -%>
    <div class="row category m-0">
        <div class="filters col-md-10">
            <div class="filter">
                <div class="icon"><i class="fa-solid fa-fire"></i></div>
                <P>Trendings</P>
            </div>
            <div class="filter">
                <div class="icon"><i class="fa-solid fa-bed"></i></div>
                <P>Rooms</P>
            </div>
            <div class="filter">
                <div class="icon"><i class="fa-solid fa-mountain-city"></i></div>
                <P>Iconic Cities</P>
            </div>
            <div class="filter">
                <div class="icon"><i class="fa-solid fa-mountain"></i></div>
                <P>Mountains</P>
            </div>
            <div class="filter">
                <div class="icon"><i class="fa-solid fa-fort-awesome"></i></div>
                <P>Castles</P>
            </div>
            <div class="filter">
                <div class="icon"><i class="fa-solid fa-person-swimming"></i></div>
                <P>Pool</P>
            </div>
            <div class="filter">
                <div class="icon"><i class="fa-solid fa-campground"></i></div>
                <P>Camping</P>
            </div>
            <div class="filter">
                <div class="icon"><i class="fa-solid fa-cow"></i></div>
                <P>Farms</P>
            </div>
            <div class="filter">
                <div class="icon"><i class="fa-solid fa-snowflake"></i></div>
                <P>Artic</P>
            </div>
        </div>
        <div class="tax-toggle col-md-2">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Show Taxes</label>
              </div>
        </div>
    </div>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-6 mt-3">
        <% allListings.forEach(listing => { %>
            <div class="card col listing-card pt-3" onclick="location.href='/listings/<%= listing._id%>'" >
                <img src="<%= listing.image.url %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <p class="card-text">
                   <b><%= listing.title %></b><br>
                    <%= "â‚¹"+listing.price.toLocaleString("en-IN") %>/night
                    <i class="invisible tax-switch"> + 18% GST</i>
                </p>
                </div>
              </div>
              <% }) %>
    </div>
